{% extends "base.twig" %}

{% set title = name %}
{% set showNav = true %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="css/landmark.css">
{% endblock %}

{% block js %}
    {{ parent() }}
    <script defer src="js/helper.js"></script>
    <script
      src="https://maps.googleapis.com/maps/api/js?key={{ mapsKey }}&callback=initMap&libraries=&v=weekly"
      defer
    ></script>
{% endblock %}

{% block content %}
    <div class="landmark" data-title="{{ name }}" data-lat="{{ lat }}" data-lng="{{ lng }}">
        <h1>{{ name }}</h1>
        <section class="landmark-container flex">
            <aside>
                <div class="audio">
                    <h2>Audio Description</h2>
                    <audio controls>
                        <source src="audio/{{ audio }}" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </div>
                <div class="links">
                    <h2>Links</h2>
                    <ul>
                        {% for link in links %}
                            <li><a href="{{ link[1] }}">{{ link[0] }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </aside>
            <section class="description">
                {% for paragraph in desc %}
                    <p>{{ paragraph }}</p>
                {% endfor %}
            </section>
            <aside>
                <div id="map"></div>
            </aside>
        </section>
    </div>
{% endblock %}